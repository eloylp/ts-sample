{
  "name": "ts-sample",
  "version": "1.0.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "tsc:init": "tsc --init",
    "tsc:watch": "tsc -w",
    "tslint": "./node_modules/.bin/tslint -c tslint.json --out 'issues.json' 'src/**/*.ts'",
    "watch": ". ./bash/node_path.sh && npm run tsc:watch",
    "test": "NODE_ENV=test mocha",
    "test:coverage": "nyc --cache mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eloylp/ts-sample.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eloylp/ts-sample/issues"
  },
  "homepage": "https://github.com/eloylp/ts-sample#readme",
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "typescript": "^2.3.4",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.4",
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/sinon": "^2.3.3",
    "@types/winston": "^2.3.3",
    "chai": "^4.1.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.1.0",
    "sinon": "^2.3.3",
    "source-map-support": "^0.4.16",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.4.1"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text",
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
